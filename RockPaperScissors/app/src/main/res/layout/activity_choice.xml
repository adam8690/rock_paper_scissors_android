<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.rockpaperscissors.ChoiceActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/rock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:onClick="onRockButtonClicked"
        android:layout_gravity="center"
        android:textSize="130dp"
    />

    <Button
    android:id="@+id/paper_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Paper"
        android:onClick="onPaperButtonClicked"
        android:layout_gravity="center"
        android:textSize="110dp"
        />

    <Button
    android:id="@+id/scissors_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Scissors"
    android:onClick="onScissorsButtonClicked"
        android:layout_gravity="center"
        android:textSize="75dp"
        />












</LinearLayout>
